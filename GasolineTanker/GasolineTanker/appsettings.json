{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss. zzz} [{Level}] {Message} {Exception} {NewLine}",
          "path": "D:/log.txt",
          "fileSizeLimitBytes": 2147483648
        }
      }
    ],
    "Properties": {
      "Application": "Serilog-Demo"
    }
  }
}